# MongoDB Atlas connection string
MONGO_URI=your-mongodb-connection-string

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your-jwt-secret

# Google Generative AI (Gemini / text-bison) API Configuration
# Get your API key from: https://console.cloud.google.com/ → APIs & Services → Credentials
GOOGLE_API_KEY=your-google-api-key

# Optional: Google Cloud settings (defaults used if not set)
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_LOCATION=us-central1
GOOGLE_MODEL=text-bison-001

# Server port (optional, defaults to 3000)
PORT=3000